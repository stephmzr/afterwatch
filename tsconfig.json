{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,

    "jsx": "react",
    "noUnusedLocals": false,
    "allowJs": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
